<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fdedec">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish 'em a bloated Happy Birthday, Select Card and Wish"
        android:layout_margin="8dp"
        android:textSize="14dp"
        android:textColor="#34495e"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="191dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/birthdaycard"
            android:layout_margin="6dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/hbd"
            android:layout_margin="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/hbd2"
            android:layout_margin="6dp"
            />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/hbd3"
            android:layout_margin="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Message: "
        android:layout_margin="6dp"
        android:textSize="14dp"
        android:textColor="#34495e"/>
        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage"
            android:text="Type message here"
            android:layout_margin="6dp"
            android:textSize="14dp"
            android:textColor="#34495e"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email or Phone:     "
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:textSize="14dp"
            android:textColor="#34495e"/>
        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage"
            android:text="juam@examp.com"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:textSize="14dp"
            android:textColor="#34495e"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit and Send"/>


</LinearLayout>